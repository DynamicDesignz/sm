#!/usr/bin/env bash

prefix="${prefix:-/usr/local}"

if [[ -s "$HOME/.bdsmrc" ]]     ; then source "$HOME/.bdsmrc" ; fi

source scripts/initialize
source scripts/functions

for dir in bin scripts config services ; do
  mkdir -p "${bdsm_path}/${dir}"
  rsync -agz ./$dir/ "${bdsm_path}"/$dir/
done

touch $config_path/user

ln -nfs "${bin_path}/bdsm" "${prefix}/bin/bdsm"

