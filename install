#!/usr/bin/env bash

prefix="${prefix:-/usr/local}"

for dir in bin scripts ; do
  mkdir -p "${prefix}/bdsm/${dir}"
  rsync -agz ./$dir/ /usr/local/bdsm/$dir/
done

if [[ ! -s "$prefix/bdsm/config/user" ]] ; then
  echo '# Users settings file, overrides db file settings and persists across installs.' >> $prefix/bdsm/config/user
fi

ln -nfs "${prefix}/bdsm/bin/bdsm" "${prefix}/bin/bdsm"

