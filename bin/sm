# record this early on.
initial_pwd="$PWD"

# set BDSM basic paths
sm_path="${DESTROOT:-}/sm"
modules_path="${sm_path}/core/sm/modules"
export initial_pwd sm_path modules_path

# basic options parsing
. "${modules_path}/shell/core/cli"
# initialize BDSM
. "${modules_path}/shell/core/initialize"
