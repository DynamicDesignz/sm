#!/usr/bin/env bash

list_help()
{
  log "

Usage:

  bdsm extension list <action>

Actions:

  installed - List installed extensions
  available - List available extensions
  help      - Show this help text

"
}

extension_action=${extension_args[0]}

case "$extension_action" in
  installed)
    list_installed
  ;;

  available)
    list_available
  ;;

  update)
    fetch_repository
  ;;

  help|usage)
    list_help
  ;;

  *)
    fail "$(list_help)"
  ;;
esac

exit 0
