#!/usr/bin/env bash

description "BDSM Extension manager."

actions "  update repository - Update main BDSM Extension repository from remote (git).
  install        - install named extension
  create         - create a new extension from the default template in the current directory.
  list available - List extensions available in the main repository.
  list installed - List all installed extensions.
  update X       - update extension X
  update all     - update all installed extensions
"

resources "http://bdsm.beginrescueend.com/${extension}/"

show_help

