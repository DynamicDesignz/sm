#!/usr/bin/env bash

source $extension_scripts_path/initialize

if [[ "$master_pid" -le 0 ]] ; then
  printf "\nUnicorn herd master not found running for $project $environment, starting."
  if [[ -s "$current_path/config/unicorn.rb" ]] ; then
    if [[ -s "$current_path/config.ru" ]] ; then
      unicorn -c $current_path/config/unicorn.rb -E $environment -D
    else
      unicorn_rails -c $current_path/config/unicorn.rb -E $environment -D
    fi
  else
    $scripts_path/log "error" "config/unicorn.rb not found, aborting start."
    exit 1
  fi
else
  printf "\nMaster pid '$master_pid' found."
  printf "\nSignaling herd master '$master_pid' for $project $environment to re-execute the running binary."

  kill -USR2 ${master_pid}

  printf "\nUnicorn master '$master_pid' for $project $environment should restart within a few seconds, as requests finish processing workers will be replaced."
fi

exit $?
