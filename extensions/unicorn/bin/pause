#!/usr/bin/env bash

[[ ! -z "$HOME/.bashrc" ]] && \. "$HOME/.bashrc"
[[ "$trace_flag" -eq 1 ]]  && set -x

master_pid="$(ps auxww | \grep '[u]nicorn' | \grep 'master' | awk '/'${project}'/{print $2}')"

\cd $current_path
[[ ! -z ".rvmrc" ]] && \. ".rvmrc"

if [[ "$master_pid" -le 0 ]] ; then
  $scripts_path/log "info" "Unicorn is not running for $project yet."
else
  kill -WINCH $master_pid
fi

exit $?
