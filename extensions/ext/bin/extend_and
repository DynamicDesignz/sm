#!/usr/bin/env bash

if (( ${#extension_args[@]} > 1 ))
then
  log "Installing extensions ${extension_args[*]} to ${extensions_path}\n"

  action=${extension_args[0]}
  array_shift extension_args

  extension=${extension_args[0]}
  array_shift extension_args

  case "${extension_version:-head}" in
    *([[:digit:]]).*([[:digit:]]).*([[:digit:]]))
      fetch_tarball
      ;;

    head|master)
      fetch_extensions_repository # default is head
      ;;
  esac

  extension_fetch_and_install "${extension}"

  if extension_action "${extension}" "${action}"
  then
    succeed "${extension} ${action} ${extension_args[*]} reported success."
  else
    error "${extension} ${action} ${extension_args[*]} failed."
  fi
else
  fail "At least one extension name must be specified."
fi
