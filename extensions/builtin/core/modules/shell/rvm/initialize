#!/usr/bin/env bash

modules core/array

source_files "/etc/rvmrc" "$HOME/.rvmrc"

rvm_files=(
"$rvm_path/scripts/rvm"
"$HOME/.rvm/scripts/rvm"
"/usr/local/rvm/scripts/rvm"
)

# Attempt to load RVM
files=( $(nonempty_files "${rvm_files[@]}") )
if array_is_nonempty "files"
then
  source_files $(array_first_element files)
fi
