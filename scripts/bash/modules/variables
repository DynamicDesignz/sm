#!/usr/bin/env bash


#
# BDSM variable manipulation DSL module
#
first()
{
  printf "$1"
}

ensure_set()
{
  local _variable
  for _variable in "$@" ; do
    if eval "[[ -z \"\${${_variable}:-}\" ]]" ; then
      fail "${_variable} is required to be set however it is empty (set in bdsmrc)."
    fi
  done
}

match()
{
  local _value="$1" _regex="$2"

  shopt -s extglob

  case "${_value}" in
    ${_regex}) return 0 ;;
    *)        return 1 ;;
  esac
}

