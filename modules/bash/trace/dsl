#!/usr/bin/env bash

set_ps4()
{
  export PS4="+> \${BASH_SOURCE##\${bdsm_path}\/} \${FUNCNAME[0]:+\${FUNCNAME[0]}()} \${LINENO} $ "
}

enable_trace()
{
  [[ ${trace_flag:-0} -eq 1 ]] || return

  export trace_flag
  set -o xtrace
}

enable_debug()
{
  [[ ${debug_flag:-0} -eq 1 ]] || return

  export debug_flag
  set -o verbose
}

