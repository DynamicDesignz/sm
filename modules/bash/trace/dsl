#!/usr/bin/env bash

set_ps4()
{
  export PS4="+ \${BASH_SOURCE##\${bdsm_path}} \${FUNCNAME[0]:+\${FUNCNAME[0]}()} \${LINENO} > "
}

enable_trace()
{
  if [[ ${trace_flag:-0} -eq 1 ]] ; then
    export trace_flag
    set -o xtrace
    return 0
  else
    return 1
  fi
}

enable_debug()
{
  if [[ ${debug_flag:-0} -eq 1 ]] ; then
    export debug_flag
    set -o verbose
    return 0
  else
    return 1
  fi
}

