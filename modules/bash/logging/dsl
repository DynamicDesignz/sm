#!/usr/bin/env bash

log()
{
  printf "$*\n"
}

info()
{
  log "INFO: $*"
}

warn()
{
  log "WARNING: $*"
}

debug()
{
  (( debug_flag == 1 )) && log "DEBUG: $*"
}

error()
{
  disable_backtrace
  log "ERROR: $*"
  exit 1
}

succeed() {
  log "$*"
  exit 0
}

fail() {
  log "ERROR: $*"
  backtrace
  exit 1
}

