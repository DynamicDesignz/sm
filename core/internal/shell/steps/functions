#!/bin/sh

__sm.step.start()
{
  typeset -A steps_started
  steps_started+=( "$1" )
}

__sm.steps.retreat()
{
  typeset step

  if [[ -z "${steps_started}" ]]
  then
    steps_started=( "$@" )
  fi

  while [[ -n "${steps_started}" ]]
  do
    array pop steps_started step
    if command exists "fail_${step}"
    then
      "fail_${step}"
    fi

    if command exists after_step
    then
      after_step "fail_${step}"
    fi
  done
}

