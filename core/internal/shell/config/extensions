#!/bin/sh

config_extension_setup()
{
  local extension module path
  extension="${1:-}"
  module="${2:-}"
  path="${3:-}"
  true ${language:=shell}

  (( $# >=3 )) && shift 3 || __sm.log.fail "Extension name, module name and path must be given."

  path create "${extension_path}/config"
  file create "${extension_path}/defaults"
}

