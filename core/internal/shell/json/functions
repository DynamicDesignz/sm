#!/bin/sh

__sm.json.get()
{
  typeset _type _path _default _variable _json_file
  _json_file="$1" && shift

  # TODO: support 'as {variable name}'
  while (( $# ))
  do
    _type="$1" && shift
    _path="$1" && shift
    _variable="${_path//\//_}"
    case "${_type}" in
      (string)
        if [[ "$1" == "default" ]]
        then
          shift
          _default="$1" && shift
        fi

        typeset -g ${_variable} >/dev/null

        if ! eval "${_variable}=$("${sm_path}/core/cli/bin/json/get" "${_path}" "${_json_file}")"
        then
          eval "${_variable}="
        fi

        if eval "[[ -z \"\${${_variable}}\" && -n \"${_default}\" ]]"
        then
          eval "${_variable}=\"${_default}\""
        fi
        ;;
      (array)
        if [[ "$1" == "default" ]]
        then
          shift
          _default="$1" && shift
        fi

        typeset -ga ${_variable} >/dev/null

        if ! eval "${_variable}=($("${sm_path}/core/cli/bin/json/get" "${_path}" "${_json_file}"))"
        then
          eval "${_variable}=()"
        fi

        if eval "[[ -z \"\${${_variable}}\" && -n \"${_default}\" ]]"
        then
          eval "${_variable}=(${_default})"
        fi
        ;;
    esac
  done
}

__sm.json.set()
{
  NIY
}

