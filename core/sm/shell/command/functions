#!/bin/sh

__sm.command.exists()
{
  builtin command -v "${1}" > /dev/null 2>&1
}

__sm.command.full.name()
{
  builtin command -v
}

__sm.command.is.function()
{
  declare -f "${1}" > /dev/null 2>&1
}

__sm.command.run.as()
{
  _user="$1" _flags=( $2 )
  shift 2
  #TODO: find a way for proper passing of params with spaces
  su ${_flags[@]} "${_user}" -c "$*"
}

__sm.command.run()
{
  "$@"
}
